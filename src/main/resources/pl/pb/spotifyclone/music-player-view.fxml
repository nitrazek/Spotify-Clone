<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Slider?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pl.pb.spotifyclone.viewmodels.MusicPlayerViewModel"
            style="-fx-background-color: red;">

    <top>
        <VBox spacing="5" style="-fx-padding: 10;">
            <Text fx:id="songNameText" text="Nazwa utworu" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <Text fx:id="artistNameText" text="Nazwisko wykonawcy"/>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER">
                <Button fx:id="previousSongButton">
                    <graphic>
                        <Text text="⏮"/>
                    </graphic>
                </Button>

                <Button fx:id="pausePlaySongButton">
                    <graphic>
                        <Text text="⏯"/>
                    </graphic>
                </Button>

                <Button fx:id="nextSongButton">
                    <graphic>
                        <Text text="⏭"/>
                    </graphic>
                </Button>
            </HBox>

            <ProgressBar fx:id="progressBar" prefWidth="200" />
            <Slider fx:id="volumeSlider" min="0.0" max="1.0" value="0.5" showTickLabels="true" showTickMarks="true"/>
        </VBox>
    </center>

</BorderPane>
